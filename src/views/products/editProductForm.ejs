<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/styles-creUpDelProduct.css" />
  </head>
  <body>
    <header class="header bg-dark-gray">
        <%- include('../partials/header') %>
    </header>
    <main class="main-container">
        <ul class="no-list progressive-links">
            <li>
                <a class="no-link" href="/markets/"><span>markets</span></a>
                <i class="fas fa-chevron-right"></i>
            </li>
            <li>
                <a class="no-link" href="/markets/<%= asset.type %>">
                    <span><%= asset.type %></span>
                </a>
            </li>
            <li>
                <i class="fas fa-chevron-right"></i>
                <a class="no-link" href="/markets/<%= asset.type %>/<%= asset.name %>"><span>
                    <%= asset.name %>
                </span></a>
            </li>
            <li>
                <i class="fas fa-chevron-right"></i>
                <span>edit</span>
            </li>
        </ul>
        <h1 class="text-center">Edit Product</h1>
        <form
          action="/markets/<%= asset.type %>/<%= asset.id %>?_method=PUT"
          method="POST" enctype='multipart/form-data'
        >
          <div class="form">
            <input
              type="text"
              name="id"
              placeholder="ID"
              class="input"
              value="<%= asset.id %>"
              required
            />
            <input
              type="text"
              name="name"
              placeholder="Name"
              class="input"
              value="<%= asset.name %>"
              required
            />
            <select name="type" id="type" class="select" required>
              <option value=""></option>
              <option value="cryptocurrencies" <%= asset.type == 'cryptocurrencies'? "selected": null %> >cryptocurrencies</option>
              <option value="stocks" <%= asset.type == 'stocks'? "selected": null %>>stocks</option>
            </select>
            <input
              type="text"
              name="ticker"
              placeholder="Ticker"
              class="input"
              value="<%= asset.ticker %>"
              required
            />
            <input
              type="text"
              name="price"
              placeholder="Price"
              class="input"
              value="<%= asset.price %>"
              required
            />
            <input
              type="number"
              step="0.01"
              name="change"
              placeholder="Change"
              class="input"
              value="<%= asset.change %>"
              required
            />
            <div class="input-file">
              <input type="file" name="logo" id="" class="input-file-button" value="<%= asset.logo %>" required/>
            </div>
            <input
              type="text"
              name="mcap"
              placeholder="Market Cap"
              class="input"
              value="<%= asset.mcap %>"
              required
            />
            <input type="submit" value="Edit Product" class="load-product" />
          </div>

    </main>
    </form>

    <footer class="footer"><%- include('../partials/footer') %></footer>
  </body>
</html>
