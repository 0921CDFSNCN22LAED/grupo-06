<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/styles-creUpDelProduct.css" />
  </head>
  <body>
    <header class="header bg-dark-gray">
        <%- include('../partials/header') %>
    </header>
    <main class="main-container">
        <ul class="no-list progressive-links">
            <li>
                <a class="no-link" href="/markets/"><span>markets</span></a>
                <i class="fas fa-chevron-right"></i>
            </li>
            <li>
                <a class="no-link" href="/markets/<%= nameType %>">
                    <span><%= nameType %></span>
                </a>
            </li>
            <li>
                <i class="fas fa-chevron-right"></i>
                <a class="no-link" href="/markets/<%= nameType %>/<%= asset.id %>"><span>
                    <%= asset.name %>
                </span></a>
            </li>
            <li>
                <i class="fas fa-chevron-right"></i>
                <span>edit</span>
            </li>
        </ul>
        <h1 class="text-center">Edit Product</h1>
        <form action="/markets/<%= nameType %>/<%= asset.id %>" method="POST" enctype='multipart/form-data'>

            <div class="form">
                <input type="text" name="id" placeholder="ID" class="input hidden" value="<%= asset.id %>">
                <input type="text" name="name" placeholder="Name" class="input" value="<%= asset.name %>">                

                <input type="text" name="type" class="input" value="<%= nameType %>" readonly>               

                <input type="text" name="ticker" class="input" value="<%= asset.ticker %>">
                
                <input type="text" name="price" class="input" value="<%= asset.price %>">

                <input type="number" step="0.01" name="price_change_24" class="input" value="<%= asset.price_change_24 %>">

                <div class="input-file">
                  <input type="file" name="logo" id="logo" class="input-file-button" value="asset.logo">
                </div>
                <input type="number" name="mcap" placeholder="Market Cap" class="input" value="<%= asset.mcap %>">

                <input type="submit" value="Edit Product" class="load-product">
          </div>

        </form>
    </main>

    <footer class="footer"><%- include('../partials/footer') %></footer>
  </body>
</html>
